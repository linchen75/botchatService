@model List<Me.WLF.Model.State>

@{
    ViewBag.Title = "State";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section NavState
{
    class="active"
}

<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>Name</th>
        <th>Type
        </th>
        <th>Description</th>
        <th>Management
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="span3">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="span1">
                @Html.DisplayFor(modelItem => item.TypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td class="span1">
                @Html.ActionLink("Messages", "Index", "StateMessage", new { id = item.Id }, null)
            </td>
        </tr>
    }

</table>
