@model Me.WLF.Model.ConstMessage

@{
    ViewBag.Title = "Edit ConstMessage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section NavConstMessages
{
class="active"
}

<form class="form-search" method="post">
    <fieldset>
        <legend>Edit Const Message</legend>
        <div class="control-group">
            @Html.LabelFor(model => model.Content, new { @class = "control-label" })
            <div class="controls">
                @Html.TextAreaFor(model => model.Content)
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <button type="submit" class="btn">Edit</button>
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn" })
            </div>
        </div>
    </fieldset>
</form>
