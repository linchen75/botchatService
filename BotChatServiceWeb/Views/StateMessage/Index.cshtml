@model System.Collections.Generic.IList<Me.WLF.Model.StateMessage>

@{
    ViewBag.Title = "StateMessages";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section NavState
{
class="active"
}

@Html.ActionLink("Add", "Add", new { StateId = ViewBag.StateId }, new {@class="btn" })
<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>State Name
        </th>
        <th>Messages
        </th>
        <th>Language</th>
        <th>Management</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="span3">
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td class="span1">
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Language)
            </td>
            <td class="span1">
                @Html.ActionLink("Delete", "Del", new { id = item.Id, stateId = ViewBag.StateId })
            </td>
        </tr>
    }

</table>
